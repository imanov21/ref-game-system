<%- include("partials/homeHeader") %>
<!-- Jumbotron -->
<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-3 text-uppercase jumbotron-h1">Welcome on dashboard page!</h1>
        <div class="mt-4">
            <p>Your progress during this program</p>
            <a class="btn btn-outline-primary btn-lg text-capitalize" href="/link" role="button">Refferal link</a>
        </div>
    </div>
</div>

<div class="container text-center">
    <div class="row">
        <!-- Conference card -->
        <% achievements.forEach(function(achievement){ %>
        <div class="col-lg-4 cards">
            <div class="card bg-lw h-100">
                <img src="<%= achievement.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title text-capitalize"><i class="fas fa-paste"></i><%= achievement.title %></h5>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<%- include("partials/footer") %>