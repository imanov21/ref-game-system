<%- include("partials/header") %>
<div class="container text-center">
    <div>
        <h1>Welcome on Dashboard page!</h1>
        <h3>Your personal refferal progress</h3>
    </div>
    <div class="row bg-lw">
        <% achievements.forEach(function(achievement){ %>
        <div class="col-lg-2">
            <div class="achiev-card bg-lw m-3 p-1">
                <img src="<%= achievement.image %>" alt="...">
            </div>
        </div>
        <% }); %>
    </div>
</div>

<div class="container text-center">
    <h3 class="text-left">Your earned rewards:</h3>
    <div class="row">
        <% achievements.forEach(function(achievement){ %>
        <div class="col-lg-4 cards">
            <div class="card bg-lw h-100">
                <img src="<%= achievement.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title text-capitalize"><i class="fas fa-paste"></i> <%= achievement.title %></h5>
                    <p class="card-text"> <%= achievement.description %></p>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<%- include("partials/footer") %>