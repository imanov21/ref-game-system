<%- include("partials/header") %>

<div class="login-form bg-lw p-4">
    <form action="/login" method="POST">
        <h2 class="text-center mb-3">Login form</h2>
        <div class="form-group">
            <input type="text" class="form-control" name="username" placeholder="Логін" required="required">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Пароль" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-primary btn-block">Sign in</button>
        </div>
        <p class="text-center"><a href="/" class="btn btn-outline-primary btn-block">Back</a></p>
    </form>
</div>
<%- include("partials/footer") %>